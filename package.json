{
  "name": "opz-hub",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev:frontend": "pnpm --filter @opz-hub/frontend dev",
    "dev:backend": "pnpm --filter @opz-hub/backend dev",
    "build:frontend": "pnpm --filter @opz-hub/frontend build",
    "build:backend": "pnpm --filter @opz-hub/backend build",
    "test:frontend": "pnpm --filter @opz-hub/frontend test:unit",
    "lint": "pnpm run typecheck && pnpm run lint:eslint",
    "lint:fix": "pnpm run typecheck && pnpm run lint:eslint:fix",
    "typecheck": "pnpm run typecheck:backend && pnpm run typecheck:frontend",
    "typecheck:backend": "pnpm --filter @opz-hub/backend typecheck",
    "typecheck:frontend": "pnpm --filter @opz-hub/frontend type-check",
    "lint:eslint": "pnpm run lint:backend && pnpm run lint:frontend",
    "lint:eslint:fix": "pnpm run lint:backend:fix && pnpm run lint:frontend:fix",
    "lint:backend": "eslint apps/backend/src --config apps/backend/eslint.config.js --no-error-on-unmatched-pattern",
    "lint:backend:fix": "eslint apps/backend/src --config apps/backend/eslint.config.js --no-error-on-unmatched-pattern --fix",
    "lint:frontend": "pnpm --filter @opz-hub/frontend lint",
    "lint:frontend:fix": "pnpm --filter @opz-hub/frontend lint",
    "format": "pnpm run format:backend && pnpm run format:frontend",
    "format:backend": "prettier --write \"apps/backend/src/**/*.{ts,tsx}\"",
    "format:frontend": "pnpm --filter @opz-hub/frontend format"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vue/eslint-config-prettier": "^10.0.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
